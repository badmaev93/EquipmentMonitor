<Window x:Class="EquipmentMonitor.Views.DuplicateResolveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Обнаружен дубликат"
        Width="500" Height="250"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FocusManager.FocusedElement="{Binding ElementName=BtnKeepBoth}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextWrapping="Wrap" FontSize="13" Margin="0,0,0,8">
            <Run Text="Устройство с серийным номером "/>
            <Run x:Name="SerialRun" FontWeight="Bold"/>
            <Run Text=" уже существует."/>
        </TextBlock>

        <TextBlock Grid.Row="1" TextWrapping="Wrap" FontSize="12" Foreground="Gray" Margin="0,0,0,12">
            <Run Text="Существующее: "/>
            <Run x:Name="ExistingRun"/>
            <LineBreak/>
            <Run Text="Импортируемое: "/>
            <Run x:Name="ImportingRun"/>
        </TextBlock>

        <TextBlock Grid.Row="2" Text="Выберите действие:" Margin="0,0,0,8" VerticalAlignment="Bottom"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
            <Button x:Name="BtnOverwrite" Content="Перезаписать" Width="120" Padding="8,6"
                    Margin="0,0,8,0" Click="BtnOverwrite_Click" IsTabStop="True" TabIndex="0"/>
            <Button x:Name="BtnKeepBoth" Content="Оставить оба" Width="120" Padding="8,6"
                    Margin="0,0,8,0" Click="BtnKeepBoth_Click" IsTabStop="True" TabIndex="1"/>
            <Button x:Name="BtnSkip" Content="Не добавлять" Width="120" Padding="8,6"
                    Click="BtnSkip_Click" IsTabStop="True" TabIndex="2"/>
        </StackPanel>

        <CheckBox Grid.Row="4" x:Name="ApplyToAllCheckBox"
                  Content="Применить для всех" HorizontalAlignment="Center"
                  IsChecked="False"/>
    </Grid>
</Window>

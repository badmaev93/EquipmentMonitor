<Window x:Class="EquipmentMonitor.Views.AddDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:EquipmentMonitor.Converters"
        x:Name="ThisWindow"
        Title="Добавить устройство"
        Height="380" Width="380"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <conv:EnumDisplayConverter x:Key="EnumDisplay"/>
    </Window.Resources>

    <StackPanel Margin="16">
        <TextBlock Text="Категория:" Margin="0,0,0,4"/>
        <ComboBox ItemsSource="{Binding CategoryValues}"
                  SelectedItem="{Binding Category}"
                  Margin="0,0,0,8">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource EnumDisplay}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Text="Название:" Margin="0,0,0,4"/>
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

        <TextBlock Text="Серийный номер:" Margin="0,0,0,4"/>
        <TextBox Text="{Binding SerialNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

        <TextBlock Text="Дата установки:" Margin="0,0,0,4"/>
        <DatePicker SelectedDate="{Binding InstallDate}" Margin="0,0,0,8"/>

        <TextBlock Text="Статус:" Margin="0,0,0,4"/>
        <ComboBox ItemsSource="{Binding StatusValues}"
                  SelectedItem="{Binding Status}"
                  Margin="0,0,0,16">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource EnumDisplay}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить"
                    Command="{Binding ConfirmCommand}"
                    CommandParameter="{Binding ElementName=ThisWindow}"
                    Padding="16,6" Margin="0,0,8,0"/>
            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding ElementName=ThisWindow}"
                    Padding="16,6"/>
        </StackPanel>
    </StackPanel>
</Window>
